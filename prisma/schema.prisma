generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int                @id @default(autoincrement())
  name             String
  email            String             @unique
  password         String?
  projects         Project[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  FreeTimeDuration FreeTimeDuration[]
}

model Project {
  id    Int    @id @default(autoincrement())
  title String

  Users          User[]
  duration_start DateTime
  duration_end   DateTime
  total_hours    Int
  freeTimes      FreeTimeDuration[]
}

model FreeTimeDuration {
  id        Int      @id @default(autoincrement())
  events    Event[]
  userId    Int
  projectId Int
  User      User     @relation(fields: [userId], references: [id])
  Project   Project  @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id                 Int               @id @default(autoincrement())
  time_start         DateTime
  time_end           DateTime
  status             String
  FreeTimeDuration   FreeTimeDuration? @relation(fields: [freeTimeDurationId], references: [id])
  freeTimeDurationId Int?
  createdAt          DateTime          @default(now())
}
